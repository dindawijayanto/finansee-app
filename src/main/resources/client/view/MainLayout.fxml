<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.shape.*?>

<AnchorPane xmlns:fx="http://javafx.com/fxml" fx:controller="com.finansee.client.controller.MainLayoutController"
            prefHeight="844" prefWidth="390">

    <StackPane fx:id="contentArea" style="-fx-background-color: transparent;"
               AnchorPane.topAnchor="0.0" AnchorPane.bottomAnchor="0.0"
               AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" />

    <HBox alignment="CENTER" spacing="30" styleClass="floating-navbar"
          AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0">

        <Button onAction="#loadDashboard" styleClass="nav-btn-icon">
            <graphic>
                <SVGPath content="M10 20v-6h4v6h5v-8h3L12 3 2 12h3v8z" styleClass="nav-icon-fill-active" scaleX="1.3" scaleY="1.3"/>
            </graphic>
        </Button>

        <Button onAction="#loadAnalysis" styleClass="nav-btn-icon">
            <graphic>
                <SVGPath content="M3.5 18.49l6-6.01 4 4L22 6.92l-1.41-1.41-7.09 7.97-4-4L2 16.99z" styleClass="nav-icon-fill" scaleX="1.3" scaleY="1.3"/>
            </graphic>
        </Button>

        <Button onAction="#loadAdd" style="-fx-background-color: transparent; -fx-padding: 0;">
            <graphic>
                <StackPane>
                    <Circle radius="28" styleClass="nav-btn-add-circle"/>
                    <SVGPath content="M19 13h-6v6h-2v-6H5v-2h6V5h2v6h6v2z" fill="white" scaleX="1.2" scaleY="1.2"/>
                </StackPane>
            </graphic>
        </Button>

        <Button onAction="#loadWallet" styleClass="nav-btn-icon">
            <graphic>
                <SVGPath content="M21 18v1c0 1.1-.9 2-2 2H5c-1.11 0-2-.9-2-2V5c0-1.1.89-2 2-2h14c1.1 0 2 .9 2 2v1h-9c-1.11 0-2 .9-2 2v8c0 1.1.89 2 2 2h9zm-9-2h10V8H12v8zm4-2.5c-.83 0-1.5-.67-1.5-1.5s.67-1.5 1.5-1.5 1.5.67 1.5 1.5-.67 1.5-1.5 1.5z" styleClass="nav-icon-fill" scaleX="1.2" scaleY="1.2"/>
            </graphic>
        </Button>

        <Button onAction="#loadProfile" styleClass="nav-btn-icon">
            <graphic>
                <SVGPath content="M12 12c2.21 0 4-1.79 4-4s-1.79-4-4-4-4 1.79-4 4 1.79 4 4 4zm0 2c-2.67 0-8 1.34-8 4v2h16v-2c0-2.66-5.33-4-8-4z" styleClass="nav-icon-fill" scaleX="1.3" scaleY="1.3"/>
            </graphic>
        </Button>
    </HBox>

</AnchorPane>